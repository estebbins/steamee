{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Games</h2>
    <div class="row">
        {% for game in storeGames %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ game.name }}</h5>
            <img src="{{ game.logo }}" alt="{{ game.name }} logo or image">
            <div class="card-body">
                <h5 class="card-title">
                    Ready?:
                </h5>
                <p class="card-text">
                    Body: 
                </p>
                <p class="card-text">
                    Amount: 
                </p>
                <a href="/games/" class="btn btn-info">
                    View {{ game.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}