{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/games/newForm/getInfo" method="POST">
            <fieldset>
                <legend>Add Game with Steam&#174 ID (preferred)</legend>
                <label class="form-label">Enter Steam&#174 App ID:</label>
                <h6 style="font-size: 14px!important;">Go to the game's Steam&#174 storepage in your browser and look at the URL of the page. Find the code (3-8 digits) after "app/", e.g., Unrailed https://store.steampowered.com/app/1016920/Unrailed/ - the App ID is 1016920</h6>
                    <input 
                        type="number" 
                        name="steamId" 
                        class="form-control"
                        placeholder="Enter Steam App ID"
                    >
            </fieldset>
            <input 
                type="submit" 
                value="Search Steam" 
                class="btn my-btn"
            >
        </form>
        <hr>
        <form action="/games/" method="POST">
            <fieldset>
                <legend>Add Game with No Steam&#174 ID</legend>
                <label class="form-label">Title: </label>
                    <input 
                        type="text" 
                        name="title" 
                        class="form-control"
                        placeholder="name of game"
                        required
                    >
                <label class="form-label">Logo:</label>
                    <input 
                        type="text" 
                        name="logo" 
                        class="form-control"
                        placeholder="logo url"
                    >
                <label class="form-label">Type:</label>
                    <input 
                        type="text" 
                        name="type" 
                        class="form-control"
                        placeholder="enter game type (e.g., video game, board game)"
                        value="video game"
                    >
            </fieldset>
            <input type="submit" value="Save Game" class="btn my-btn">
        </form>
    </div>
{% endblock %}