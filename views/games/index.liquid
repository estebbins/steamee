{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Games</h2>
    <div class="row">
        {% for game in games %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ game.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Ready?: {{ game.ready }}
                </h5>
                <p class="card-text">
                    Body: {{ game.body }}
                </p>
                <p class="card-text">
                    Amount: {{ game.amount }}
                </p>
                <a href="/games/{{ game.id }}" class="btn btn-info">
                    View {{ game.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}